<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.wisdomschool.activitys.ChangeNamedActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <include
           layout="@layout/toolbar"
           />
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"

           >
           <TextView
               android:id="@+id/tv_save"
               style="@style/TextSizeSmallTitleBlack"
               android:text="保存"
               android:textColor="@color/blue"
               android:padding="10dp"
               android:layout_centerVertical="true"
               />
       </RelativeLayout>
   </RelativeLayout>
    <View
        style="@style/GaryDiveStyle"
        />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:maxLines="1"
        android:lines="1"
        android:textColorHint="@color/black"
        android:background="@null"
        android:hint="输入您的姓名"
        />
    <View
        style="@style/GaryDiveStyle"
        />
        <TextView
            style="@style/TextSizecontentBlack"
            android:padding="10dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/blue"
            android:text="一个真实的称呼，如：小明老师，更容易让学生家长更放心的加入您的班级"
            />

</LinearLayout>
