<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.wisdomschool.activitys.ForgetPwdActivity">
    <include
        layout="@layout/toolbar"
        />
    <View
        style="@style/GaryDiveStyle"
        />
        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    style="@style/TextSizeSmallTitleBlack"
                    android:textColor="@color/black"
                    android:text="用户名"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    />
                <View
                    style="@style/GaryDiveStyle"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    />
                <EditText
                    android:id="@+id/et_phone"
                    android:hint="@string/editphone"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/tv_auth"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_margin="8dp"
                    android:textColor="@color/white"
                    android:background="@color/blue"
                    android:layout_height="40dp"
                    android:text="获取验证码"
                    />
            </TableRow>
            <View
                style="@style/GaryDiveStyle"
                />
            <TableRow>
                <TextView
                    style="@style/TextSizeSmallTitleBlack"
                    android:textColor="@color/black"
                    android:text="验证码"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    />
                <View
                    style="@style/GaryDiveStyle"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    />
                <EditText
                    android:id="@+id/et_auth"
                    android:hint="@string/editauth"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    />

            </TableRow>
            <View
                style="@style/GaryDiveStyle"
                />
            <TableRow>
                <TextView
                    style="@style/TextSizeSmallTitleBlack"
                    android:textColor="@color/black"
                    android:text="新密码"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    />
                <View
                    style="@style/GaryDiveStyle"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    />
                <EditText
                    android:id="@+id/et_pwd"
                    android:hint="@string/editpwd"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    />

            </TableRow>
            <View
                style="@style/GaryDiveStyle"
                />
            <TableRow>
                <TextView
                    style="@style/TextSizeSmallTitleBlack"
                    android:textColor="@color/black"
                    android:text="新密码"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    />
                <View
                    style="@style/GaryDiveStyle"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    />
                <EditText
                    android:id="@+id/et_affpwd"
                    android:hint="再次输入新密码"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    />

            </TableRow>
            <View
                style="@style/GaryDiveStyle"
                />
        </TableLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/ButtonLoginStyles"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="完成"
                android:background="@drawable/shape_class_btn"
                 />
</LinearLayout>
