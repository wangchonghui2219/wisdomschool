<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.wisdomschool.activitys.GetTeachCodeActivity">
    <include
        layout="@layout/toolbar"
        />
    <View
        style="@style/GaryDiveStyle"
        />
        <TextView
            style="@style/TextSizecontentBlack"
            android:text="在线申请教师邀请码："
            android:padding="10dp"
            />
    <View
        style="@style/GaryDiveStyle"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow

            android:padding="5dp"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/TextSizeSmallTitleBlack"
                android:text="姓名"
                android:layout_weight="1"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_name"
                android:hint="请输入姓名"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
               android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                />
        </TableRow>
        <View
            style="@style/GaryDiveStyle"
            />
        <TableRow

            android:padding="5dp"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/TextSizeSmallTitleBlack"
                android:text="联系电话"
                android:layout_weight="1"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_phone"
                android:hint="请输入联系电话"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                />
        </TableRow>
        <View
            style="@style/GaryDiveStyle"
            />
        <TableRow

            android:padding="5dp"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/TextSizeSmallTitleBlack"
                android:text="学校"
                android:layout_weight="1"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_schoolname"
                android:hint="请填写全名以便专人给你回访"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                />
        </TableRow>
        <View
            style="@style/GaryDiveStyle"
            />
    </TableLayout>
        <Button
            android:layout_width="200dp"
            android:id="@+id/btn_apply"
            android:layout_height="40dp"
            android:background="@drawable/shape_class_btn"
            android:layout_gravity="center_horizontal"
            android:text="申请老师邀请码"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            />
    <TextView
        style="@style/TextSizecontentBlack"
        android:text="信息提交后我惠尽快告知您的邀请码，请您耐心等待哦~"
        android:textColor="@color/garytext"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
