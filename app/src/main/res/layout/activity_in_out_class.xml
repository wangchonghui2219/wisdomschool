<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.dlwx.wisdomschool.activitys.InOutClassActivity">
    <include
        layout="@layout/toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_class_bg"
        >
        <TextView
            android:id="@+id/tv_inclass"
            style="@style/TextSizecontentBlack"
            android:text="入班申请"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_out"
            style="@style/TextSizecontentBlack"
            android:text="退班申请"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </LinearLayout>
    <ListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:dividerHeight="10dp"
        android:divider="@null"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    </ListView>
    <View
        style="@style/GaryDiveStyle"
        />
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_all"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 全选"
                android:layout_marginLeft="20dp"
                android:button="@drawable/selete_check"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_allaggress"
                android:layout_width="100dp"
                android:background="@color/blue"
                android:layout_alignParentRight="true"
                android:text="同意请求"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="40dp" />
        </RelativeLayout>
</LinearLayout>
