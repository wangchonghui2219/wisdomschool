<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.wisdomschool.activitys.MyJoinClassPersionMessActivity">

    <include layout="@layout/toolbar" />

    <View
        style="@style/GaryDiveStyle"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/TextSizecontentBlack"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="头像" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_re_black_line">

            <ImageView
                android:id="@+id/iv_head"
                style="@style/ImagehomeItempic"
                android:src="@mipmap/icon_bjxxtianjiachenggong" />

        </RelativeLayout>
    </LinearLayout>

    <View style="@style/GaryDiveStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/TextSizecontentBlack"
            android:layout_weight="1"
            android:text="在此班身份" />

        <TextView
            style="@style/TextSizecontentBlack"
            android:id="@+id/tv_name"
            android:textColor="@color/garytext"
            android:text="李老师" />

    </LinearLayout>
    <View
        style="@style/GaryDiveStyle"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EEEEEE"
        />
    <View
        style="@style/GaryDiveStyle"
        />
    <LinearLayout
        android:id="@+id/ll_privatechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            style="@style/TextSizecontentBlack"
            android:layout_weight="1"
            android:text="私聊" />

        <ImageView
            style="@style/Imagesmill2pic"
            android:layout_height="16dp"
            android:src="@mipmap/icon_canyufasong" />
    </LinearLayout>
</LinearLayout>
