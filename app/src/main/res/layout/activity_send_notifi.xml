<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.wisdomschool.activitys.SendNotifiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    style="@style/Imagesmillpic"
                    android:src="@mipmap/icon_naozhong" />

                <TextView

                    style="@style/TextSizecontentBlack"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="发送" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/GaryDiveStyle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_seleteclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_classname"
                    style="@style/TextSizecontentBlack"
                    android:layout_weight="1"
                    android:text="一年级八班"
                    android:textColor="@color/black" />

                <ImageView
                    style="@style/Imagesmill2pic"
                    android:src="@mipmap/icon_jiantourig" />
            </LinearLayout>

            <View style="@style/GaryDiveStyle" />

            <LinearLayout
                android:id="@+id/ll_seleteaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_actionname"
                    style="@style/TextSizecontentBlack"
                    android:layout_weight="1"
                    android:text="选择活动主题"
                    android:textColor="@color/black" />

                <ImageView
                    style="@style/Imagesmill2pic"
                    android:src="@mipmap/icon_jiantourig" />
            </LinearLayout>

            <View style="@style/GaryDiveStyle" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/gary"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"

                        android:hint="请编辑调查内容"
                        android:textSize="13sp" />

                    <com.dlwx.baselib.view.MyGridView
                        android:id="@+id/gv_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:numColumns="4"></com.dlwx.baselib.view.MyGridView>

                    <ImageView
                        android:id="@+id/iv_video"
                        style="@style/ImagehomeItempic"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ss33" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_black_line"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                style="@style/Imagesmill2pic"
                                android:src="@mipmap/icon_syyuyin"
                                />

                            <TextView
                                style="@style/TextSizecontentBlack"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:text="10”"
                                android:textColor="@color/blue" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextSizecontentBlack"
                        android:layout_weight="1"
                        android:text="调查选项"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/TextSizecontentBlack"
                        android:text="点击加号可上传一张图片"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View style="@style/GaryDiveStyle" />

                <com.dlwx.baselib.view.MyListView
                    android:id="@+id/lv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.dlwx.baselib.view.MyListView>

                <View style="@style/GaryDiveStyle" />

                <TextView
                    android:id="@+id/tv_addaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="+增加一个选项"
                    android:textColor="@color/black" />

                <View style="@style/GaryDiveStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextSizecontentBlack"
                        android:text="匿名调查"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="（您将无法查看选项名单）"
                        android:textSize="11sp" />

                    <Switch
                        style="@style/switchstyle"
                        />

                </LinearLayout>

                <View style="@style/GaryDiveStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextSizecontentBlack"
                        android:layout_weight="1"
                        android:text="可多选" />

                    <Switch
                        style="@style/switchstyle" />

                </LinearLayout>

                <View style="@style/GaryDiveStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextSizecontentBlack"
                    android:layout_weight="1"
                    android:text="参与者可查看结果" />

                <Switch
                    style="@style/switchstyle" />

            </LinearLayout>

            <View style="@style/GaryDiveStyle" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center_horizontal"
                android:textColor="@color/blue"
                android:text="如何快速私聊&amp;最佳方案"
                />
        </LinearLayout>

    </ScrollView>
    <View
        style="@style/GaryDiveStyle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView style="@style/Imagesmillpic"
            android:id="@+id/iv_mp3"
            android:src="@mipmap/icon_ltyuyin"
            android:layout_marginLeft="20dp"
            />

        <ImageView style="@style/Imagesmillpic"
            android:id="@+id/iv_addpic"
            android:src="@mipmap/icon_lttupian"
            android:layout_marginLeft="40dp"
            />

        <ImageView style="@style/Imagesmillpic"
            android:id="@+id/iv_face"
            android:src="@mipmap/icon_ltxiaolian"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
</LinearLayout>
