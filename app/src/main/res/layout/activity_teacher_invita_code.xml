<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.wisdomschool.activitys.TeacherInvitaCodeActivity">
    <include
        layout="@layout/toolbar"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/icon_wdyaoqingma"
            >
            <TextView
                android:layout_marginTop="40dp"
                style="@style/TextSizecontentBlack"
                android:text="您生成的教师邀请码是"

                />
                <TextView
                    android:id="@+id/tv_code"
                    style="@style/TextSizeTitleBlack"
                    android:text="666058"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="40dp"
                style="@style/TextSizecontentBlack"
                android:text="有效期至10月21号"

                />
        </LinearLayout>
    <TextView
        android:layout_marginTop="40dp"
        style="@style/TextSizecontentBlack"
        android:layout_gravity="center_horizontal"
        android:text="有效期内不限制使用次数"
        android:layout_weight="1"
        />
        <View
            style="@style/GaryDiveStyle"
            />
    <TextView
        android:layout_marginTop="10dp"
        android:padding="10dp"
        style="@style/TextSizecontentBlack"

        android:text="您还可以点击以下方式分享给你的教师朋友使用"
        />
        <GridView
            android:layout_width="match_parent"
            android:id="@+id/gv_list"
            android:numColumns="4"
           android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"></GridView>

</LinearLayout>
