<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:background="@drawable/shape_class_add_entry"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ss33"
            />
        <TextView
                style="@style/TextSizecontentBlack"
                android:layout_margin="10dp"
                android:text="@string/addclassentry"
            />
            <Button
                android:id="@+id/btn_addclass"
                style="@style/ButtonLoginStyles"
                android:text="加入班级"
                android:background="@drawable/shape_class_btn"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_height="30dp"
                android:layout_width="120dp"
                 />
    </LinearLayout>
</LinearLayout>