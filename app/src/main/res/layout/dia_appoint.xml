<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_seleteclass_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextSizeSmallTitleBlack"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:text="将他设为任课老师吗？"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        >
        <TextView

            style="@style/TextSizecontentBlack"
            android:textSize="11sp"
            android:textColor="@color/garytext"
            android:text="@string/inviteteach"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_nosett"
            style="@style/TextSizeTitleBlack"
            android:text="不设置"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/blue"
            />
        <Button
            android:id="@+id/btn_sett"

            style="@style/ButtonLoginStyles"
            android:background="@drawable/shape_class_btn"
            android:layout_gravity="center_horizontal"

            android:text="设置"
            android:layout_marginRight="30dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            />
    </LinearLayout>
</LinearLayout>