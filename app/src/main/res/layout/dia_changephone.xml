<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_seleteclass_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextSizeTitleBlack"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:text="确认手机号"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        >
        <TextView

            style="@style/TextSizecontentBlack"
            android:textSize="13sp"
            android:textColor="@color/garytext"
            android:text="我们将发送短信验证码到这个手机："
            />
              <TextView
            android:id="@+id/tv_phone"
            style="@style/TextSizecontentBlack"
            android:textSize="13sp"
            android:textColor="@color/garytext"
            android:text="18637051978"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_close"
            style="@style/TextSizeTitleBlack"
            android:text="取消"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/blue"
            />
        <Button
            android:id="@+id/btn_ok"

            style="@style/ButtonLoginStyles"
            android:background="@drawable/shape_class_btn"
            android:layout_gravity="center_horizontal"

            android:text="好的"
            android:layout_marginRight="30dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            />
    </LinearLayout>
</LinearLayout>