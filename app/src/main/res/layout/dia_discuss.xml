<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/shape_seleteclass_bg"
    android:layout_height="match_parent">
    <TextView
        style="@style/TextSizeTitleBlack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="确定要暂停智慧讨论吗?"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_close"
            style="@style/TextSizeTitleBlack"
            android:text="@string/close"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue"
            />
        <Button
            android:id="@+id/btn_aff"

            style="@style/ButtonLoginStyles"
            android:background="@drawable/shape_class_btn"
            android:layout_gravity="center_horizontal"

            android:text="@string/affirm"
            android:layout_marginRight="50dp"
            android:layout_height="35dp"
            android:layout_width="100dp"
            />
    </LinearLayout>
</LinearLayout>