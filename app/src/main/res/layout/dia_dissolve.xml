<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_seleteclass_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextSizeSmallTitleBlack"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:text="确定要解散班级吗"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        >
    <TextView

        style="@style/TextSizecontentBlack"

        android:text="解散班级后，班级将被删除，所有班级人员"
        />
    <TextView

        style="@style/TextSizecontentBlack"
        android:text="将被i退出此班"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_close"
            style="@style/TextSizeTitleBlack"
            android:text="@string/close"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/blue"
            />
        <Button
            android:id="@+id/btn_aff"

            style="@style/ButtonLoginStyles"
            android:background="@drawable/shape_class_btn"
            android:layout_gravity="center_horizontal"

            android:text="解散班级"
            android:layout_marginRight="30dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            />
    </LinearLayout>
</LinearLayout>