<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/TextSizeSmallTitleBlack"
            android:text="选择要查纪录的班级"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            style="@style/Imagesmill2pic"
            android:src="@mipmap/icon_bjxxtjcg"
            android:id="@+id/iv_close"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/TextSizecontentBlack"
            android:text="全部成长纪录"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            />
        <CheckBox
           style="@style/CheckBoxStyle"
            android:id="@+id/cb_check"
            android:checked="true"
            android:button="@drawable/selete_check"
            />


    </LinearLayout>
    <TextView
        android:background="#F6F6F6"
        android:padding="10dp"
        style="@style/TextSizecontentBlack"

        android:layout_width="match_parent"
        android:text="我创建的班级"
        />
        <com.dlwx.baselib.view.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_listcreate"
            android:scrollbars="none"
            ></com.dlwx.baselib.view.MyListView>
            <TextView
                android:id="@+id/tv_mycreatenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:textSize="11sp"
                android:text="显示全部2个班级"
                />
            <TextView
                android:background="#F6F6F6"
                android:padding="10dp"
                style="@style/TextSizecontentBlack"

                android:layout_width="match_parent"
                android:text="我加入的班级"
                />
            <com.dlwx.baselib.view.MyListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_listadd"
                android:scrollbars="none"
                ></com.dlwx.baselib.view.MyListView>
            <TextView
                android:background="#F6F6F6"
                android:padding="10dp"
                style="@style/TextSizecontentBlack"

                android:layout_width="match_parent"
                android:text="隐私"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_listprivacy"
                android:padding="10dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_pic"
                    style="@style/ImagehomeItempic"
                    android:src="@mipmap/ss33"
                    android:layout_marginLeft="30dp"
                    android:scaleType="fitXY"
                    />
                <TextView
                    style="@style/TextSizecontentBlack"
                    android:text="仅自己可见"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <View
                style="@style/GaryDiveStyle"
                android:layout_marginBottom="50dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>