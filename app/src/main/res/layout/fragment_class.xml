<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_teach"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_class_bg"
            >
            <TextView
                android:id="@+id/tv_create"
                style="@style/TextSizecontentBlack"
                    android:text="@string/class_titlecreate"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:textSize="16sp"
                 />
             <TextView
                 android:id="@+id/tv_add"
                style="@style/TextSizecontentBlack"
                    android:text="@string/class_titleadd"
                android:layout_weight="1"
                 android:textSize="16sp"
                 android:layout_height="match_parent"
                 android:gravity="center"
                 />

        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_patriarch"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_entrypatriarch"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/icon_cjwu"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="什么也没有快去添加吧"
                            android:textSize="11sp"
                            android:padding="10dp"
                            />
                        <Button
                            android:id="@+id/btn_addclasspatriarch"
                            android:layout_width="100dp"
                            android:background="@drawable/shape_class_btn"
                            android:text="+加入班级"
                            android:textColor="@color/white"
                            android:layout_height="30dp">


                        </Button>

                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/ll_noentrypatriarch"
                >
            <ListView
                android:layout_marginTop="10dp"
                android:id="@+id/lv_listpatriarch"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="15dp"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_margin="20dp"
                >
            </ListView>
            <Button
                android:id="@+id/btn_createpatriarch"
                style="@style/ButtonLoginStyles"
                android:background="@drawable/shape_class_btn"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="加入班级"
                android:layout_height="35dp"
                android:layout_marginBottom="40dp"
                android:layout_width="150dp"
                />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>