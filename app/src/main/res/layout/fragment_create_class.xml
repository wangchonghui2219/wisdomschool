<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.wisdomschool.fragments.CreateClassFragment">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         >
     <include
           layout="@layout/create_class_entry"
           />
          <ListView
              android:layout_marginTop="10dp"
              android:id="@+id/lv_list"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:dividerHeight="15dp"
              android:divider="@null"
              android:scrollbars="none"
              android:layout_margin="20dp"
              >
          </ListView>
     <Button
         android:id="@+id/btn_create"
         style="@style/ButtonLoginStyles"
         android:background="@drawable/shape_class_btn"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:text="@string/createclass"
         android:layout_height="35dp"
         android:layout_marginBottom="40dp"
         android:layout_width="150dp"
         />
     </LinearLayout>

</LinearLayout>
