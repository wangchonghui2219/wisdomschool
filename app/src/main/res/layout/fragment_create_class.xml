<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.wisdomschool.fragments.CreateClassFragment">
     <include
         layout="@layout/create_class_entry"
         />
          <com.scwang.smartrefresh.layout.SmartRefreshLayout
              android:layout_width="match_parent"
              android:id="@+id/refreshLayout"
              android:layout_height="match_parent">
               <LinearLayout
                   android:id="@+id/rl_noentry"
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="match_parent"
                   >

          <com.dlwx.baselib.view.MyListView
              android:layout_marginTop="10dp"
              android:id="@+id/lv_list"
              android:layout_above="@id/btn_create"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:dividerHeight="15dp"
              android:divider="@null"
              android:scrollbars="none"
               android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              >
          </com.dlwx.baselib.view.MyListView>
                    <Button
                        android:id="@+id/btn_create"
                        style="@style/ButtonLoginStyles"
                        android:background="@drawable/shape_class_btn"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="@string/createclass"
                        android:layout_centerInParent="true"
                        android:layout_height="35dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="150dp"
                        />
               </LinearLayout>
          </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>
