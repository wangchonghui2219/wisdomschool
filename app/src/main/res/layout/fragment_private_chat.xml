<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.dlwx.wisdomschool.fragments.PrivateChatFragment">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >
                <LinearLayout

                    android:layout_width="match_parent"

                    android:orientation="vertical"
                    android:background="@drawable/shape_class_add_entry"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ss33"
                            />
                        <TextView
                            style="@style/TextSizecontentBlack"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:layout_gravity="center_horizontal"
                            android:text="单独沟通？询问请假就用私聊吧!"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="点击"
                                    android:textSize="13sp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="“群聊”"
                                    android:textColor="@color/blue"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13sp"
                                    android:text="选个来年喜人来沟通吧"
                                    />
                        </LinearLayout>
                </LinearLayout>

        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何快速私聊&amp;最佳方案"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            />
</LinearLayout>
