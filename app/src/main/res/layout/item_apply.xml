<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/shape_reline_gary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_check"
        style="@style/Imagesmill3pic"
            android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_xzxuanwei"
        android:layout_margin="5dp"

         />
    <ImageView
        android:id="@+id/iv_pic"
        style="@style/ImagehomeItempic"
        android:src="@mipmap/ss33"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                style="@style/TextSizecontentBlack"
                android:text="高飞"
                android:gravity="center_vertical"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_lose"
                    style="@style/TextSizecontentBlack"
                    android:textColor="@drawable/selete_createclass_item_preate"
                    android:text="忽略"
                        android:padding="5dp"
                    />
            <TextView
                android:id="@+id/tv_aggress"
                    style="@style/TextSizecontentBlack"
                    android:textColor="@color/blue"
                    android:text="同意"
                    android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:layout_marginRight="10dp"
                    />

            </LinearLayout>
        </RelativeLayout>
        <TextView
            style="@style/TextSizecontentBlack"
            android:textColor="@color/garytext"
            android:visibility="invisible"
            android:text="来自李老师：李老师的成员分享"
            />
    </LinearLayout>
</LinearLayout>