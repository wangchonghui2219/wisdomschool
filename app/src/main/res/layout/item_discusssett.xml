                android:textSize="8sp"
                android:textColor="@color/white"
               android:background="@drawable/shape_cirdot_red"
                android:layout_alignParentRight="true"

                />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_name"
        style="@style/TextSizecontentBlack"
