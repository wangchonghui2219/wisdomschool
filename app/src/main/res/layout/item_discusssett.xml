        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_zhucetouxiang"
        android:id="@+id/iv_pic"

        />
    </RelativeLayout>
            <TextView
                style="@style/Imagesmill3pic"
                android:text="1"
