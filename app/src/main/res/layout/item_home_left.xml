<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/iv_leftHead"
            style="@style/ImagehomeItempic"

            android:src="@mipmap/icon_zhucetouxiang" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_leftclassname"
                style="@style/TextSizecontentBlack"
                android:layout_margin="5dp"
                android:text="@string/banji"

                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_black_line"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextSizecontentBlack"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="群组讨论"
                    android:textColor="@color/blue" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_typeleft"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="3dp"
                        android:src="@mipmap/icon_zuoye" />

                    <TextView
                        android:id="@+id/contentleft"
                        style="@style/TextSizecontentBlack"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/iv_viecoplaytype"
                        android:layout_toRightOf="@+id/iv_viecoplaytype"
                        android:text="@string/homeitemtestright" />
                </LinearLayout>

                <com.dlwx.baselib.view.MyGridView
                    android:id="@+id/gv_piclistleft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:horizontalSpacing="3dp"
                    android:verticalSpacing="3dp"></com.dlwx.baselib.view.MyGridView>

                <RelativeLayout
                    android:id="@+id/rl_voide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/iv_videoleft"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"

                        android:layout_marginTop="5dp" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_waterplay" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_voiceleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_black_line"
                        android:orientation="horizontal"
                        android:padding="5dp"

                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_viecoplaytype"
                            style="@style/Imagesmill2pic"
                            android:src="@mipmap/icon_syyuyin" />

                        <TextView
                            android:id="@+id/tv_sec"
                            style="@style/TextSizecontentBlack"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:text="10”"
                            android:textColor="@color/blue" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:id="@+id/ll_url"
                    >
                    <ImageView
                        android:id="@+id/iv_urlpic"
                        style="@style/ImagehomeItempic2"
                        android:src="@mipmap/icon_lianjie"
                        />
                    <TextView
                        style="@style/TextSizecontentBlack"
                        android:layout_gravity="center_vertical"
                        android:text="点击打开"
                        android:lines="2"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:id="@+id/tv_urltitle"
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_leftdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/date"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_joinaction"
                        style="@style/TextSizecontentBlack"
                        android:background="@drawable/shape_home_joinactionbg"
                        android:paddingBottom="3dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="3dp"
                        android:text="参与活动"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ll_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_yueType"
                            style="@style/TextSizecontentBlack"
                            android:layout_gravity="center_vertical"
                            android:text="点击"
                            android:textColor="@color/garytext" />

                        <ImageView
                            style="@style/Imagesmillpic"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"

                            android:src="@mipmap/icon_yue" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>