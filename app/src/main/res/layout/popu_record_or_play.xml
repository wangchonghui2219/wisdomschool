<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/ll_record"
        >
    <View
        style="@style/GaryDiveStyle"
        android:layout_height="5dp"
        />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建议录音时长不要超过五分钟"
                android:layout_margin="10dp"
              android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tv_time"
                style="@style/TextSizecontentBlack"
                android:layout_alignParentRight="true"
                android:text="00:00"
                android:layout_margin="10dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >



        <CheckBox
            android:id="@+id/cb_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_margin="20dp"
            android:background="@drawable/ease_record_animate_01"
           android:layout_centerInParent="true"
            />
        </RelativeLayout>
            <TextView
                style="@style/TextSizeSmallTitleBlack"
                android:text="点击开始录音"
                android:id="@+id/tv_recordType"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_play"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="match_parent">
            <View
                style="@style/GaryDiveStyle"
                android:layout_height="5dp"
                />
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekbar"
                    android:layout_margin="20dp"
                    />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:id="@+id/tv_record"
                        style="@style/TextSizeSmallTitleBlack"
                        android:text="重录"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        />
                    <CheckBox
                        android:id="@+id/cb_play"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:button="@null"
                        android:layout_margin="20dp"
                        android:background="@drawable/selete_record"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:id="@+id/tv_delete"
                        style="@style/TextSizeSmallTitleBlack"
                        android:text="删除"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </RelativeLayout>
                <TextView
                    style="@style/TextSizeSmallTitleBlack"
                    android:text="点击预览"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    />
        </LinearLayout>

</LinearLayout>